source /home/bryan/code/personal/neomutt/contrib/smime.rc
source ~/.mutt/themerc
source ~/.mutt/keysrc
source ~/.mutt/personalrc

set quit
unset mark_old
unset move
unset copy
set delete
set send_charset = "utf-8"
set assumed_charset = "iso-8859-1"

# Set up identity
set use_from
set use_envelope_from
set signature = "~/.signature"

# Set up caching
set header_cache = "~/.mutt/h_cache"
# set message_cachedir = "~/.mutt/b_cache"

set mime_forward_rest
set abort_noattach=ask-yes

set menu_scroll
set simple_search = "~f %s | ~C %s | ~s %s"

ignore *
unignore Subject From To Cc Bcc Date

unhdr_order *
hdr_order Subject: From: To: Cc: Bcc: Date:

auto_view text/html
auto_view application/msword
auto_view application/pdf
auto_view text/calendar
alternative_order text/plain text/html

set pager_index_lines = 12
set pager_context = 5
set pager_stop

set query_command="notmuch-addrlookup --mutt '%s'"
unset markers

set sort = threads
set strict_threads
set sort_browser = reverse-date
set sort_aux = last-date-received

set sidebar_width = 35
set sidebar_visible = yes
set sidebar_sort_method = unsorted
set sidebar_divider_char = ' │'
set sidebar_folder_indent
set sidebar_short_path
set sidebar_indent_string = '└─'

set timeout=5
# timeout-hook 'exec sync-mailbox'
set mail_check_stats = yes
set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"
